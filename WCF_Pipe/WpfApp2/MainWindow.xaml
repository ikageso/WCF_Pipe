<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow2" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="96*"/>
            <RowDefinition Height="247*"/>
        </Grid.RowDefinitions>
        <Button Name="btnSend" Content="Send" HorizontalAlignment="Left" Height="37" Margin="37,29,0,0" VerticalAlignment="Top" Width="76" Click="btnSend_Click"/>
        <TextBox Name="txtSend" TextWrapping="Wrap" Text="TextBox" Grid.Row="1" Margin="10"/>
        <ScrollViewer Grid.Row="2">
            <TextBlock Name="txtLog" TextWrapping="Wrap" Text="TextBlock" Margin="10"/>
        </ScrollViewer>

    </Grid>
</Window>
